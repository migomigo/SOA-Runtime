          <xs:element minOccurs="0" name="formattedContent" type="xs:string"/>
          <xs:element minOccurs="0" name="sanitizedContent" type="xs:string"/>
          <xs:element maxOccurs="unbounded" minOccurs="0" name="nonCompliantElement" type="listing:NonCompliantElement"/>
          <xs:element maxOccurs="unbounded" minOccurs="0" name="sanitizedExternalCSS" type="listing:SanitizedExternalCSS"/>
          <xs:element maxOccurs="unbounded" minOccurs="0" name="nonCompliantCSSElement" type="listing:NonCompliantCSSElement"/>
        </xs:sequence>
       				 </xs:extension>
				</xs:complexContent>
