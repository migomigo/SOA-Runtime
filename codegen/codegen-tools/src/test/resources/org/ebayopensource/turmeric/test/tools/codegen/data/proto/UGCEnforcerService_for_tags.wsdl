      <xs:complexType name="ValidateMarkupRequest">
        <xs:annotation>
          <xs:documentation>
	 						content -  User Generated Content 
							contentContext - (token) exp: LISTING, ABOUTME; used to determine the applicable UGC policy the content needs to comply with
							returnSanitizedContent - (boolean) if true the content cleaned up of all incompliant elements will also be returned; default is false
			 </xs:documentation>
        </xs:annotation>
        <xs:complexContent>
					<xs:extension base="tns:BaseServiceRequest">
        <xs:sequence>
          <xs:element minOccurs="1" name="content" type="xs:string"/>
          <xs:element minOccurs="1" name="contentContext" type="xs:token"/>
          <xs:element minOccurs="0" name="returnSanitizedContent" type="xs:boolean"/>
        </xs:sequence>
       				 </xs:extension>
				</xs:complexContent>
      </xs:complexType>
      
       <xs:complexType name="ValidateMarkupResponse">
        <xs:annotation>
          <xs:documentation>
	 			Output is ComplexType: 
	 						markupCompliesWithPolicy - (token) 
							formattedContent - Original HTML content in a pretty print format
							sanitizedContent - The content cleaned up of all incompliant elements
							nonCompliantElements[] - Elements detail Messages if the submitted UGC is not policy complaint or success  if UGC is compliant
							sanitizedExternalCSS[] -  The List of external CSS sleaned up of all incompliant elements
							nonCompliantCSSElements[] - Elements detail of External CSS Messages if the submitted UGC with external CSS 
							 is not policy complaint or success  if UGC is compliant
	 		 </xs:documentation>
        </xs:annotation>
        <xs:complexContent>
					<xs:extension base="tns:BaseServiceResponse">
